class Gato:
    # Método construtor para inicializar os atributos
    def __init__(self, nome, idade, raca):
        self.nome = nome    # Atributo 'nome' da instância
        self.idade = idade  # Atributo 'idade' da instância
        self.raca = raca    # Atributo 'raca' da instância

    # Getter para o atributo 'nome'
    def get_nome(self):
        return self.nome

    # Setter para o atributo 'nome'
    def set_nome(self, nome):
        self.nome = nome

    # Getter para o atributo 'idade'
    def get_idade(self):
        return self.idade

    # Setter para o atributo 'idade'
    def set_idade(self, idade):
        self.idade = idade

    # Getter para o atributo 'raca'
    def get_raca(self):
        return self.raca

    # Setter para o atributo 'raca'
    def set_raca(self, raca):
        self.raca = raca

    # Método mensagem para exibir os dados do gato
    def mensagem(self):
        print(f"Meu nome é {self.nome}, tenho {self.idade} anos e sou da raça {self.raca}.")

# Criando um objeto da classe Gato
gato1 = Gato("Whiskers", 3, "Persa")

# Chamando o método mensagem para mostrar as informações do gato
gato1.mensagem()  # Esta linha imprime a mensagem
